<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvRes"
        android:layout_width="356dp"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:background="#233344"
        android:backgroundTint="#233344"
        android:fontFamily="sans-serif-medium"
        android:padding="10sp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintCircleRadius="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="+"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

    <Button
        android:id="@+id/num7"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="7"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sumar" />

    <Button
        android:id="@+id/num4"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="4"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num7" />

    <Button
        android:id="@+id/num1"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="1"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num4" />

    <Button
        android:id="@+id/num2"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="2"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num1"
        app:layout_constraintTop_toBottomOf="@+id/num5" />

    <Button
        android:id="@+id/numZero"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#8BC34A"
        android:text="0"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num2" />

    <Button
        android:id="@+id/num3"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="3"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num2"
        app:layout_constraintTop_toBottomOf="@+id/num6" />

    <Button
        android:id="@+id/num5"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="5"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num4"
        app:layout_constraintTop_toBottomOf="@+id/num8" />

    <Button
        android:id="@+id/num6"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#8BC34A"
        android:text="6"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num5"
        app:layout_constraintTop_toBottomOf="@+id/num9" />

    <Button
        android:id="@+id/igual"
        android:layout_width="75dp"
        android:layout_height="142dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#6D6767"
        android:text="="
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num6"
        app:layout_constraintTop_toBottomOf="@+id/borrar" />

    <Button
        android:id="@+id/num8"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8BC34A"
        android:text="8"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num7"
        app:layout_constraintTop_toBottomOf="@+id/restar" />

    <Button
        android:id="@+id/borrar"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF5722"
        android:text="C"
        android:textColorLink="#FF5722"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num9"
        app:layout_constraintTop_toBottomOf="@+id/dividir" />

    <Button
        android:id="@+id/num9"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#8BC34A"
        android:text="9"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/num8"
        app:layout_constraintTop_toBottomOf="@+id/multiplicar" />

    <Button
        android:id="@+id/multiplicar"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="x"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/restar"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

    <Button
        android:id="@+id/restar"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="-"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/sumar"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="74dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="รท"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/multiplicar"
        app:layout_constraintTop_toBottomOf="@+id/tvRes" />

</androidx.constraintlayout.widget.ConstraintLayout>